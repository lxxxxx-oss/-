<!-- 导员：我的 -->
<!-- 用户信息 -->
<view class="userMessage">
    <!-- 用户头像区域 -->
    <view class="headPortrait">
        <image src="{{userInfo.avatarUrl}}"></image>
    </view>
    <!-- 用户名称区域 -->
    <view class="userInfo">
        <view class="infoOne">姓名：{{name}}</view>
        <view class="infoOne">学号：{{number}}</view>
    </view>
</view>

<!-- 选项卡 -->
<!-- 可展开的多列表 -->
<view class="tabWidget" >
    <!-- 个人信息展示 -->
    <view class="tab"  bindtap="unfoldInfo">
        <image src="/assets/img/home/idCard.png" class="tabUi"></image>
        <view class="cu-bar bg-white title">
            <view class="action border-title">
                <text class="text-xl text-bold text-black">个人信息</text>
                <text class="bg-grey" style="width:3rem"></text>
            </view>
        </view>
        <image src="/assets/img/home/rightArrows.png" class="arrow" style="transform:{{isShowInfo?'rotate(90deg)' : 'rotate(0)'}}"></image>
    </view>
    <!-- 可以折叠的详细描述信息 -->
    <view wx:if="{{isShowInfo}}" class="unfold">
            <block>
            <view>{{index}}</view>
            <view>{{item}}</view>
                <view class="info" wx:for="{{info}}" wx:key="number">{{index}} : {{item}}</view>
            </block>
    </view>
    <!-- 我的设置选项 -->
    <view class="tab" bindtap="unfoldSetting">
        <image src="/assets/img/home/setting.png" class="tabUi"></image>
        <view class="cu-bar bg-white title">
            <view class="action border-title">
                <text class="text-xl text-bold text-black">我的设置</text>
                <text class="bg-grey" style="width:3rem"></text>
            </view>
        </view>
        <image src="/assets/img/home/rightArrows.png" class="arrow" style="transform:{{isShowSet?'rotate(90deg)' : 'rotate(0)'}}"></image>
    </view>
    <view wx:if="{{isShowSet}}" class="unfold">
            <view class="info">
                <button class="cu-bar bg-white" bindtap="gotoChange">
                    <view class="action sub-title">
                        <text class="text-xl text-bold text-black">修改密码</text>
                        <text class="text-ABC text-black">change</text>
                        <!-- last-child选择器-->
                    </view>
                </button>
                <image src="/assets/img/home/rightArrows.png" class="arrow"></image>    
            </view>

            <view class="info">
                <button class="cu-bar bg-white" open-type="contact">
                    <view class="action sub-title">
                        <text class="text-xl text-bold text-black">联系我们</text>
                        <text class="text-ABC text-black">cantact</text>
                        <!-- last-child选择器-->
                    </view>
                </button>
                <image src="/assets/img/home/rightArrows.png" class="arrow"></image>    
            </view>

            <view class="info">
                <button class="cu-bar bg-white" open-type="share">
                    <view class="action sub-title">
                        <text class="text-xl text-bold text-black">分享我们</text>
                        <text class="text-ABC text-black">share</text>
                        <!-- last-child选择器-->
                    </view>
                </button>
                <image src="/assets/img/home/rightArrows.png" class="arrow"></image>    
            </view>

            <view class="info">
                <button class="cu-bar bg-white">
                    <view class="action sub-title">
                        <text class="text-xl text-bold text-black">关于我们</text>
                        <text class="text-ABC text-black">about</text>
                        <!-- last-child选择器-->
                    </view>
                </button>
                <image src="/assets/img/home/rightArrows.png" class="arrow"></image>    
            </view>

            <view class="info">
                <button class="cu-bar bg-white">
                    <view class="action sub-title">
                        <text class="text-xl text-bold text-black">清除缓存</text>
                        <text class="text-ABC text-black">clear</text>
                        <!-- last-child选择器-->
                    </view>
                </button>
                <image src="/assets/img/home/rightArrows.png" class="arrow"></image>    
            </view>
        </view>
</view>

