<view class="cu-bar bg-white margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text> 校园活动
  </view>
</view>
<swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{activeList}}" wx:key class="{{cardCur==index?'cur':''}}">
    <!-- 轮播图点击放大 -->
    <view class="swiper-item" bindtap="previewActive" data-index="{{index}}" 
        data-src="{{item.url}}">
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
        <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
    </view>
  </swiper-item>
</swiper>

<view class="cu-bar bg-white">
  <view class="action">
    <text class="cuIcon-title text-blue"></text> 导员通知
  </view>
</view>
<swiper class="screen-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
  <swiper-item wx:for="{{informList}}" wx:key bindtap="previewInform" data-index="{{index}}" 
        data-src="{{item.url}}">
    <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}" bindtap="preview" data-index="{{index}}"></image>
    <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
  </swiper-item>
</swiper>

<!-- 更新轮播图图片 -->
<view class="update" wx:if="{{isCou}}">
    <view class="uploadImg" bindtap="uploadImg">
        <view>点击上传</view>
    </view>
    <view class="refresh" bindtap="openModel">选择次序</view>
</view>
<!-- 弹窗蒙版 -->
<view class="model" catchtouchmove='preventTouchMove' wx:if='{{showModal}}'></view>
<view class="modalDlg" catchtouchmove='preventTouchMove' wx:if='{{showModal}}'>
    <view class='windowRow'>
        <text class='userTitle'>选择要更换的图片</text>
        <view class='back' bindtap='back'>返回</view>
    </view>
    <view style="width:100%" class='wishName'>
        <input style="width:100%" bindinput='wish_put' placeholder-class="holder_cls" class='wish_put'></input>
    </view>
    <view class='wishbnt' bindtap='refresh'>确定</view>
</view>

