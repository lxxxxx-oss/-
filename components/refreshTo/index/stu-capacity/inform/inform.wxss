/* 弹窗样式 */
.model{
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 999;
    opacity: 0.5;
    top: 0;
    left:0;
}
.modalDlg{
    width: 80%;
    position: fixed;
    top:300rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    padding: 55rpx;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
