.changeHint {
    margin: 30rpx 0 30rpx 0;
    text-align: center;
    font-size: 45rpx;
    color:#009933;
}
.changePass {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 50%;
    width: 100%;
}
input {
    display: flex;
    align-items: center;
    height: 80rpx;
    width: 500rpx;
    padding-left: 20rpx;
    margin: 50rpx 0 50rpx 0;
    border: 2rpx solid #666666;
    border-radius: 20rpx;
}

.notarize {
    background-color: #CC9900;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 90rpx;
    width: 65%;
    margin: auto;
    margin-top: 50rpx;
    border-radius: 30rpx;
    color: #fff;
    font-size: 35rpx;
}